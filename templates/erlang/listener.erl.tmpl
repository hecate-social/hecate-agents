%%% Listener: subscribe to {{source_event}} facts from mesh
%%% Forwards to: {{process_manager}} process manager
%%% Domain: {{domain}}

-module(subscribe_to_{{source_event}}).
-behaviour(gen_server).

-export([start_link/0]).
-export([init/1, handle_call/3, handle_cast/2, handle_info/2, terminate/2]).

-include_lib("kernel/include/logger.hrl").

-define(TOPIC, <<"hecate.{{source_domain_noun}}.{{source_event}}">>).

-record(state, {
    subscription :: reference() | undefined
}).

%%====================================================================
%% API
%%====================================================================

start_link() ->
    gen_server:start_link({local, ?MODULE}, ?MODULE, [], []).

%%====================================================================
%% gen_server callbacks
%%====================================================================

init([]) ->
    self() ! subscribe,
    ?LOG_INFO("[~s] Listener starting for topic ~s", [?MODULE, ?TOPIC]),
    {ok, #state{}}.

handle_call(_Request, _From, State) ->
    {reply, {error, unknown_call}, State}.

handle_cast(_Msg, State) ->
    {noreply, State}.

handle_info(subscribe, State) ->
    SubRef = subscribe_to_topic(?TOPIC),
    {noreply, State#state{subscription = SubRef}};

handle_info({mesh_fact, ?TOPIC, FactData}, State) ->
    {{process_manager}}:handle(FactData),
    {noreply, State};

handle_info(_Info, State) ->
    {noreply, State}.

terminate(_Reason, #state{subscription = SubRef}) ->
    unsubscribe(SubRef),
    ok.

%%====================================================================
%% Internal
%%====================================================================

subscribe_to_topic(Topic) ->
    case hecate_mesh_client:subscribe(Topic, self()) of
        {ok, SubRef} ->
            ?LOG_INFO("[~s] Subscribed to ~s", [?MODULE, Topic]),
            SubRef;
        {error, not_connected} ->
            erlang:send_after(5000, self(), subscribe),
            undefined;
        {error, Reason} ->
            ?LOG_ERROR("[~s] Subscribe failed: ~p", [?MODULE, Reason]),
            undefined
    end.

unsubscribe(undefined) -> ok;
unsubscribe(SubRef) -> hecate_mesh_client:unsubscribe(SubRef).
